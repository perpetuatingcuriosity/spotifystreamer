<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/list_result_padding"
    android:focusable="true"
    android:orientation="horizontal"
    android:background="?android:attr/selectableItemBackground"
    android:minHeight="?android:listPreferredItemHeight">

    <ImageView
        android:id="@+id/search_album_art"
        android:layout_width="@dimen/list_result_image_size"
        android:layout_height="@dimen/list_result_image_size"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/search_artist_name"
        android:layout_marginLeft="@dimen/list_result_image_text_spacing"
        android:ellipsize="end"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/search_album_art"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>